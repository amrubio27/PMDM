<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    tools:context=".ut01.ex02.presentation.Ut01Ex02Activity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconSandia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_image"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_sandia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:maxLines="1"
            android:padding="10dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:text="@string/title_demo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"

            android:ellipsize="end"
            android:maxLines="2"
            android:padding="10dp"
            android:text="@string/content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">

            <!--5 stars-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:layout_marginLeft="24dp"
                    android:tint="@color/grey"
                    android:src="@drawable/star_fill1_wght400_grad0_opsz48" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:tint="@color/grey"
                    android:src="@drawable/star_fill1_wght400_grad0_opsz48" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:tint="@color/grey"
                    android:src="@drawable/star_fill1_wght400_grad0_opsz48" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:tint="@color/grey"
                    android:src="@drawable/star_fill1_wght400_grad0_opsz48" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:tint="@color/grey"
                    android:src="@drawable/star_fill1_wght400_grad0_opsz48" />

            </LinearLayout>

            <!--Like button, use of relative layaout to align image to the right
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/ic_sandia" />
            </RelativeLayout>
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/size_icon"
                    android:layout_height="@dimen/size_icon"
                    android:layout_marginEnd="24dp"

                    android:src="@drawable/favorite_fill1_wght400_grad0_opsz48"
                    app:tint="@color/grey" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>