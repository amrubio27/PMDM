        <TextView
            android:id="@+id/TituloProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_icon"
            android:paddingTop="12dp"
            android:text="Pack Sorpresa"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SubtituloProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TituloProducto"
            android:paddingLeft="@dimen/size_icon"
            android:text="Aviso de recogida con la Hora:Minutos"
            android:maxLines="1"/>

    </RelativeLayout>

    <RelativeLayout
