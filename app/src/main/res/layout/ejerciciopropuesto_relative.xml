<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    tools:context=".ut01.ex02.presentation.Ut01Ex02Activity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconSandia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_image"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_sandia" />


    <!--Titulo-->
    <TextView
        android:id="@+id/TituloGrande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconSandia"
        android:layout_marginHorizontal="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="10dp"
        android:text="@string/title_demo"
        android:textStyle="bold" />

    <!--SubTitulo-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TituloGrande"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/SubTitle"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="10dp"
        android:text="@string/content" />

    <!--5 stars-->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Star1"
        android:layout_below="@+id/SubTitle"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        android:layout_marginLeft="24dp"
        android:src="@drawable/star_fill1_wght400_grad0_opsz48"
        android:tint="@color/grey" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Star2"
        android:layout_toEndOf="@+id/Star1"
        android:layout_below="@+id/SubTitle"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        android:src="@drawable/star_fill1_wght400_grad0_opsz48"
        android:tint="@color/grey" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Star3"
        android:layout_toEndOf="@+id/Star2"
        android:layout_below="@+id/SubTitle"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        android:src="@drawable/star_fill1_wght400_grad0_opsz48"
        android:tint="@color/grey" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Star4"
        android:layout_toEndOf="@+id/Star3"
        android:layout_below="@+id/SubTitle"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        android:src="@drawable/star_fill1_wght400_grad0_opsz48"
        android:tint="@color/grey" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_toEndOf="@+id/Star4"
        android:id="@+id/Star5"
        android:layout_below="@+id/SubTitle"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        android:src="@drawable/star_fill1_wght400_grad0_opsz48"
        android:tint="@color/grey" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_toEndOf="@+id/SubTitle"
        android:id="@+id/Star6"
        android:layout_below="@+id/SubTitle"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        android:layout_marginLeft="-50dp"


        android:src="@drawable/favorite_fill1_wght400_grad0_opsz48"
        app:tint="@color/grey" />

</RelativeLayout>